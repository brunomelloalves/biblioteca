@model List<Usuario>

@{
    ViewData["Title"] = "Listagem de Usuários";
}
<h1 class="row justify-content-md-center">Usuários Cadastrados no sistema</h1>

<table class="table">
    @if (Model.Count != 0)
        {
    <thead>
        <tr>
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                @if(u.Tipo==Usuario.ADMIN){
                    <td>Administrador</td>
                }
                else
                {
                    <td>Padrão</td>
                }

                <td><a href="/Usuario/editarUsuario/@u.Id">Editar</a></td>
                <td><a href="/Usuario/excluirUsuario/@u.Id">Excluir</a></td>
                
            </tr>
        }
    </tbody>

    }
        else
        {
        <tr>
        <th>
        <p>Nenhum registro encontrado</p>
        </th>

        </tr>
        }
</table>
<a href="RegistrarUsuarios" class="btn btn-primary">Registrar novo Usuário</a>