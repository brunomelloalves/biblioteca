@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}


<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>
<div class="row justify-content-md-center">

    <form asp-action="RegistrarUsuarios" method="POST" class="col-md-4">
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input type="text" asp-for="Senha" class="form-control" required />
        </div>

        <select name="tipo" id="userTipo" class="option">
            <option value="@Usuario.ADMIN">Administrador</option>
            <option value="@Usuario.PADRAO">Padrão</option>
        </select>

        <input type="submit" value="Salvar" class="btn btn-primary" />
    </form>

</div>
